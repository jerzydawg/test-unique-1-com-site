---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const title = "Apply for Free Government Phone in 2 Minutes - Test Unique Site 1";
const description = "Get approved for your free government phone instantly. Simple 2-minute application with same-day approval. No credit check required. Start your application now.";
const canonical = `${siteURL}/apply`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Apply for Free Government Phone in 2 Minutes",
  "description": description,
  "author": {
    "@type": "Organization",
    "name": siteName
  },
  "publisher": {
    "@type": "Organization",
    "name": siteName,
    "url": siteURL
  },
  "datePublished": "2025-12-11",
  "dateModified": "2025-12-11",
  "url": canonical
};

const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How long does the application take?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The application takes just 2 minutes to complete. Most applicants receive approval within the same day."
      }
    },
    {
      "@type": "Question",
      "name": "What documents do I need?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You'll need a valid ID and proof of income or participation in qualifying programs like SNAP, Medicaid, or WIC."
      }
    },
    {
      "@type": "Question",
      "name": "Is there a credit check?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No credit check is required. Approval is based on income or participation in qualifying assistance programs."
      }
    }
  ]
};
---

<Layout title={title} description={description} canonical={canonical}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
  <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)}></script>

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-3">
    <div class="container mx-auto px-4">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-[var(--color-primary)] hover:underline">Home</a></li>
        <li class="text-gray-500">/</li>
        <li class="text-gray-700 font-medium">Apply</li>
      </ol>
    </div>
  </nav>

  <main class="container mx-auto px-4 py-8">
    <!-- Hero Section -->
    <section class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Free Government Phone</h1>
      <p class="text-xl text-gray-700 mb-8 max-w-3xl mx-auto">
        Get your free smartphone with unlimited talk, text, and data in just 2 minutes. No credit check, no monthly bills, no hidden fees.
      </p>
      <a href="#eligibility-checker" class="bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-gray-900 font-bold py-3 px-6 rounded-xl shadow-lg inline-block">
        Check Your Eligibility Now
      </a>
    </section>

    <!-- Introduction -->
    <section id="intro" class="mb-12">
      <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Apply Now - It's Quick and Easy</h2>
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-700 mb-4">
            Applying for your Free Government Phone through Test Unique Site 1 takes less time than making a cup of coffee. Our streamlined process eliminates paperwork headaches and gets you connected fast. Over 40 million Americans already have their free phone - you could be next.
          </p>
          <p class="text-gray-700 mb-4">
            The Lifeline program provides completely free smartphones to qualifying households, and the application couldn't be simpler. You'll answer a few quick questions, upload a photo of your ID, and receive instant feedback on your eligibility. No waiting weeks for approval letters or complicated forms to fill out.
          </p>
          <p class="text-gray-700">
            Your Free Government Phone comes loaded with everything you need: unlimited nationwide calling, unlimited texting, and high-speed data. Plus, you'll get a brand new Android smartphone with all the features you expect - camera, internet, apps, and more. Test Unique Site 1 makes the entire process transparent and hassle-free.
          </p>
        </div>
      </div>
    </section>

    <!-- Eligibility Checker -->
    <section id="eligibility-checker" class="mb-12">
      <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg p-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Quick Eligibility Check</h2>
        <div class="max-w-2xl mx-auto">
          <p class="text-gray-700 mb-6 text-center">
            Answer these simple questions to see if you qualify for your Free Government Phone:
          </p>
          <div class="space-y-4">
            <div class="bg-white rounded-lg p-4 shadow-sm">
              <label class="flex items-center cursor-pointer">
                <input type="checkbox" class="mr-3 h-5 w-5 text-[var(--color-primary)]">
                <span class="text-gray-800">My household income is at or below 135% of Federal Poverty Guidelines</span>
              </label>
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm">
              <label class="flex items-center cursor-pointer">
                <input type="checkbox" class="mr-3 h-5 w-5 text-[var(--color-primary)]">
                <span class="text-gray-800">I receive SNAP, Medicaid, WIC, or housing assistance</span>
              </label>
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm">
              <label class="flex items-center cursor-pointer">
                <input type="checkbox" class="mr-3 h-5 w-5 text-[var(--color-primary)]">
                <span class="text-gray-800">I'm a veteran or tribal member</span>
              </label>
            </div>
          </div>
          <div class="text-center mt-8">
            <button class="bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-gray-900 font-bold py-3 px-6 rounded-xl shadow-lg">
              Continue Application
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Application Steps -->
    <section id="application-steps" class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">How to Get Your Free Phone in 3 Steps</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center text-white font-bold text-xl" style="background-color: var(--color-primary)">
            1
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Verify Eligibility</h3>
          <p class="text-gray-700">
            Tell us about your household income or current benefits. We'll instantly check if you qualify for the Free Government Phone program.
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center text-white font-bold text-xl" style="background-color: var(--color-primary)">
            2
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Upload Documents</h3>
          <p class="text-gray-700">
            Take a quick photo of your ID and proof of benefits with your phone. Our secure system processes everything instantly.
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center text-white font-bold text-xl" style="background-color: var(--color-primary)">
            3
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Receive Your Phone</h3>
          <p class="text-gray-700">
            Get approved instantly and choose your phone delivery. Your new smartphone arrives within 3-5 business days, ready to use.
          </p>
        </div